<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yadaming.gnenepalapp.Iodine">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="350dp"
        android:text="आमोडडन "
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:text="शिि को भन्स्तष्क ववकासका राधग आमोडडन अत्मन्त जरुयी "
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:text="हुन्ि य मसरे ठूरा भान्िे राई ऩतन गरगाॉड हुनफाट जोगाउॉ ि "
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/neck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="40dp"
            android:textSize="30sp"
            android:paddingLeft="260dp"
            android:text="Iodine"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/chips"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="250dp"
        android:text="आमोडडनमुक्त नून प्रमोग गनाछरे िरययराई चादहने आमोडडन ऩमाछप्त "
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="250dp"
        android:text=" भात्राभा प्राप्त हुन्ि"
    />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:src="@drawable/yes"
        android:background="#00FF00"
        android:onClick="nextMethodIodine"
    />
</LinearLayout>

