<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yadaming.gnenepalapp.Iodine">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="360dp"
        android:textStyle="bold"
        android:textColor="#22316C"
        android:text="आमोडडन "
    />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="50dp"
        android:text="शिि को भन्स्तष्क ववकासका राधग आमोडडन अत्मन्त जरुयी "
    />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="30dp"
        android:text="हुन्ि य मसरे ठूरा भान्िे राई ऩतन गरगाॉड हुनफाट जोगाउॉ ि "
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/neck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="40dp"
            android:textSize="30sp"
            android:paddingTop="50dp"
            android:paddingLeft="60dp"
            android:textColor="#ffcf0918"
            android:textStyle="bold"
            android:text="IODINE"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/chips"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="100dp"
        android:text="आमोडडनमुक्त नून प्रमोग गनाछरे िरययराई चादहने आमोडडन ऩमाछप्त "
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="300dp"
        android:text=" भात्राभा प्राप्त हुन्ि"
    />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:src="@drawable/yes"
        android:background="#00FF00"
        android:onClick="nextMethodIodine"
    />
</LinearLayout>

