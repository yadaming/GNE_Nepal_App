<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Cooking">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#22316C"
        android:paddingLeft="180dp"
        android:text="हाभीरे घयभा दै तनक रुऩभा खाने परपूर तथा"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="40dp"
        android:textSize="30sp"
        android:paddingLeft="200dp"
        android:textStyle="bold"
        android:textColor="#22316C"
        android:text="सागऩात सदहतको खाना नै स्वस्थ खाना हो "
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/fruits_and_veg"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/food"/>
    </LinearLayout>


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/yes"
        android:background="#00FF00"
        android:onClick="nextMethodCooking"
    />

</LinearLayout>

